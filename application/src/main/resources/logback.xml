<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%cyan(%thread)] %highlight(%-5level) %cyan(%logger{36}) %magenta({%mdc{}})
                - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="${LOGBACK_LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
